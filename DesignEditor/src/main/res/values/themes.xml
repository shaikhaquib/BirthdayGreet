<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigitalEditorApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/app_blue_dark</item>
        <item name="colorPrimaryVariant">@color/app_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#569cd1</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:dropDownListViewStyle">@style/popupMenuStyle</item>-->


    </style>

    <style name="SpinnerDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="colorControlNormal">@color/app_blue</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>


    <style name="AppTheme.Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/segoeui</item>
    </style>

    <style name="TextStyle_white">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/segoeui</item>
    </style>

    <style name="TextStyle_black">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/segoeui</item>
    </style>

    <style name="CropTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/electricviolet</item>
        <!--<item name="colorPrimaryDark">@color/electricviolet</item>-->
       <!-- <item name="android:windowBackground">@color/yourWindowBackgroundColor</item>-->
    </style>

</resources>